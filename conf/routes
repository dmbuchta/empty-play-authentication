# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET         /                     controllers.secured.HomeController.index


GET         /login                controllers.security.SecurityController.showLoginPage
POST        /login                controllers.security.SecurityController.login
POST        /login/google         controllers.security.sso.GoogleSsoController.login
POST        /login/fb             controllers.security.sso.FacebookSsoController.login
GET         /logout               controllers.security.SecurityController.logout
POST        /createAccount        controllers.security.SecurityController.createAccount

GET         /assets/*file         controllers.Assets.at(path="/public", file)
